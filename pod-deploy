---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: www-deploy
  labels:
    app: www
spec:
  replicas: 1
  selector:
    matchLabels:
      app: www
  template:
    metadata:
      labels: 
        app: www
    spec:
      containers:
        - name: mywebapp
          image: sripadaani/kube-test-app-v2
          ports:
            - containerPort: 80

---
