  replicas: 1
  selector:
    matchLabels:
      app: myapp1
  template:
    metadata:
      labels:
        app: myapp1
    spec:
      containers:
        - name: myapp1
          image: sripadaani/kube-test-app-v1
          ports:
            - containerPort: 80

